<div class="col-xs-6">
  {{#if isOwned}}
  <button type="submit" style="margin-top:30px;" class="close" {{action "delete"}}>
    &times;</button>
  {{/if}}
  {{#if member.photo}}
<img src={{member.photo}} width="100%" height="250">

<h4 style="text-transform:uppercase; font-size:40px;">{{member.name}}</h4>
<h5>{{member.title}}</h5>
<a href={{member.linkedin}} target="blank"><h4>LinkedIn</h4></a>
{{else}}
<h4 style="text-transform:uppercase; font-size:50px;">{{member.name}}</h4>
<h5>{{member.title}}</h5>
<a href={{member.linkedin}}>LinkedIn</a>
<h5 style="font-weight:700">Add Photo</h5>
<center>{{file-member member=member}}</center>
{{/if}}
</div>
