<div class="jumbotron" style="background-color:#fff;">
  {{#link-to 'start-up' start_up}}
    <span style="font-size:16px; text-align:center; color:#000; margin-right:20px;">{{start_up.name}} Main </span>{{/link-to}}
    {{#link-to 'solution' start_up}}
